<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Popup menus -->
    <style name="PopupMenuItem">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="PopupMenuIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/bluey_grey</item>
    </style>

    <style name="PopupMenuText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <!-- Buttons -->
    <style name="IconButtonTypical">
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="TextFieldHintTypical">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IconButtonStreamingControl">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="tint">@color/white</item>
        <item name="android:background">@drawable/bg_streaming_control</item>
    </style>

    <style name="TextLiveChatItemUsername">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textFontWeight">600</item>
    </style>

    <style name="TextLiveChatItemMessage">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
